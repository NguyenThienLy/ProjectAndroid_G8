<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<android.support.v4.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/stringConfirmInfPushRoom"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="16dp"/>
        <TextView
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/stringPhonePushRoom"
            android:textColor="@android:color/black"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/edt_phone_push_room"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:hint="@string/stringEnterPhonePushRoom"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:background="@drawable/custom_spinner_rim"/>
        <TextView
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/stringTitleConfirmPushRoom"
            android:textColor="@android:color/black"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/edt_titleConfirm_push_room"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:hint="@string/stringTitleHelpPushRoom"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:background="@drawable/custom_spinner_rim"/>
        <TextView
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/stringDescribePushRoom"
            android:textColor="@android:color/black"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/edt_describe_push_room"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:hint="@string/stringDescribeConfirmPushRoom"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:background="@drawable/custom_spinner_rim"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">
                <TextView
                    android:layout_marginTop="15dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/stringOpenTimePushRoom"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"/>
                <EditText
                    android:id="@+id/edt_openTime_push_room"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"

                    android:gravity="center"
                    android:textColor="@android:color/black"
                    android:background="@drawable/custom_spinner_rim"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:text="@string/stringCloseTimePushRoom"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    />
                <EditText
                    android:id="@+id/edt_closeTime_push_room"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:textColor="@android:color/black"
                    android:background="@drawable/custom_spinner_rim"
                    />
            </LinearLayout>
        </LinearLayout>
        <Button
            android:id="@+id/btn_nextStep4_post_room"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/stringPostPushRoom"
            android:layout_marginTop="40dp"
            android:textColor="@android:color/holo_blue_bright"
            android:layout_gravity="center"
            android:background="@drawable/custom_rim"/>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>



</LinearLayout>