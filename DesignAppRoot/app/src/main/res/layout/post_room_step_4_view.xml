<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:text="@string/stringTitlePushRoom"
                    android:layout_marginLeft="50dp"
                    android:textColor="@android:color/black"
                    android:gravity="center"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btn_cancel_push_room"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Cancel"
                    android:background="@android:color/white"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/custom_rim"
                >
                <ImageButton
                    android:id="@+id/btnImg_location_push_room"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_placeholder"
                    android:background="@drawable/custom_rim"
                    android:layout_marginLeft="28dp"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="17dp"
                    android:text="@string/stringLocationPushRoom"
                    android:layout_below="@+id/btnImg_location_push_room"/>
                <ImageButton
                    android:id="@+id/btnImg_information_push_room"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_svg_information_24"
                    android:background="@drawable/custom_rim"
                    android:layout_marginLeft="70dp"
                    android:layout_toRightOf="@+id/btnImg_location_push_room"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/stringInformationPushRoom"
                    android:layout_marginLeft="50dp"
                    android:layout_below="@+id/btnImg_information_push_room"
                    android:layout_toRightOf="@id/btnImg_location_push_room"/>
                <ImageButton
                    android:id="@+id/btnImg_utility_push_room"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_svg_utility_24"
                    android:background="@drawable/custom_rim"
                    android:layout_marginLeft="70dp"
                    android:layout_toRightOf="@+id/btnImg_information_push_room"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/stringUtilityPushRoom"
                    android:layout_marginLeft="70dp"
                    android:layout_below="@+id/btnImg_utility_push_room"
                    android:layout_toRightOf="@id/btnImg_information_push_room"/>
                <ImageButton
                    android:id="@+id/btnImg_confirm_push_room"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_svg_confirm_24"
                    android:background="@drawable/custom_rim"
                    android:layout_marginLeft="70dp"
                    android:layout_toRightOf="@+id/btnImg_utility_push_room"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/stringConfirmPushRoom"
                    android:layout_marginLeft="60dp"
                    android:layout_below="@+id/btnImg_utility_push_room"
                    android:layout_toRightOf="@id/btnImg_utility_push_room"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="336dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="50dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/stringConfirmInfPushRoom"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:textSize="16dp"/>
                <TextView
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/stringPhonePushRoom"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"/>
                <EditText
                    android:id="@+id/edt_phone_push_room"
                    android:layout_width="330dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:hint="@string/stringEnterPhonePushRoom"
                    android:gravity="center"
                    android:textColor="@android:color/black"
                    android:background="@drawable/custom_spinner_rim"/>
                <TextView
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/stringTitleConfirmPushRoom"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"/>
                <EditText
                    android:id="@+id/edt_titleConfirm_push_room"
                    android:layout_width="330dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:hint="@string/stringTitleHelpPushRoom"
                    android:gravity="center"
                    android:textColor="@android:color/black"
                    android:background="@drawable/custom_spinner_rim"/>
                <TextView
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/stringDescribePushRoom"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"/>
                <EditText
                    android:id="@+id/edt_describe_push_room"
                    android:layout_width="330dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:hint="@string/stringDescribeConfirmPushRoom"
                    android:gravity="center"
                    android:textColor="@android:color/black"
                    android:background="@drawable/custom_spinner_rim"/>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/stringOpenTimePushRoom"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"/>
                    <EditText
                        android:id="@+id/edt_openTime_push_room"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="40dp"
                        android:layout_marginLeft="15dp"
                        android:gravity="center"
                        android:textColor="@android:color/black"
                        android:background="@drawable/custom_spinner_rim"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="100dp"
                        android:layout_marginTop="15dp"
                        android:text="@string/stringCloseTimePushRoom"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:layout_toRightOf="@+id/edt_openTime_push_room"/>
                    <EditText
                        android:id="@+id/edt_closeTime_push_room"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="40dp"
                        android:layout_marginLeft="100dp"
                        android:gravity="center"
                        android:textColor="@android:color/black"
                        android:background="@drawable/custom_spinner_rim"
                        android:layout_toRightOf="@+id/edt_openTime_push_room"/>
                </RelativeLayout>
                <Button
                    android:id="@+id/btn_nextStep4_post_room"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="@string/stringPostPushRoom"
                    android:layout_marginTop="40dp"
                    android:textColor="@android:color/holo_blue_bright"
                    android:layout_gravity="center"
                    android:background="@drawable/custom_rim"/>
            </LinearLayout>

        </LinearLayout>




    </ScrollView>

</LinearLayout>