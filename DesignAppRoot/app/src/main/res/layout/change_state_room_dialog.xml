<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/custom_button_delete">
        <ImageView
            android:id="@+id/img_close"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:padding="3dp"
            android:src="@drawable/ic_svg_delete_17" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:background="#80EFF0F3"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_change"/>
                <TextView
                    android:layout_marginBottom="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center_horizontal"
                    android:padding="3dp"
                    android:text="Thay đổi trạng thái của phòng"
                    android:textColor="#271C1C"
                    android:textSize="15sp" />
            </LinearLayout>

            <RadioGroup
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_alignParentRight="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RadioButton
                    android:id="@+id/rad_clear"
                    android:textColor="@drawable/custom_radio_text_color"
                    android:background="@drawable/custom_radio_button_gender"
                    android:padding="10dp"
                    android:gravity="center_horizontal"
                    android:button="@android:color/transparent"
                    android:text="Còn phòng"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
                <RadioButton
                    android:id="@+id/rad_rent"
                    android:textColor="@drawable/custom_radio_text_color"
                    android:background="@drawable/custom_radio_button_gender"
                    android:padding="10dp"
                    android:gravity="center_horizontal"
                    android:button="@android:color/transparent"
                    android:text="Cho thuê"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
            </RadioGroup>

        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>