<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imageView"
                android:scaleType="fitXY"
                android:layout_width="wrap_content"
                android:layout_height="400dp"
                android:src="@drawable/bg_jpg_login_100"

                />
            <Button
                android:id="@+id/btn_LoginWithApp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/stringBtnLogin"
                android:background="@color/colorRed"
                android:width="300dp"
                android:layout_gravity="center"
                android:textColor="@android:color/white"
                android:layout_marginTop="50dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">

                <ImageButton
                    android:id="@+id/btnImg_facebook_login"
                    android:layout_width="130dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_svg_facebook_100"
                    android:background="@android:color/white"
                    android:layout_weight="1"
                    android:layout_marginLeft="40dp"
                    />
                <ImageButton
                    android:id="@+id/btnImg_google_login"
                    android:layout_width="130dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_svg_google_100"
                    android:background="@android:color/white"
                    android:layout_weight="1"
                    android:layout_marginRight="40dp"
                    />

            </LinearLayout>
            <TextView
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/stringQuestion"
                android:textColor="@android:color/holo_blue_bright"
                android:textStyle="italic"
                />
            <TextView
                android:id="@+id/txt_signUp_login"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/stringSignUp"
                android:textColor="@android:color/holo_blue_bright"
                android:textStyle="italic|bold"
                />


            <LinearLayout
                android:id="@+id/boxMenu"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@android:color/white"
                android:layout_alignParentBottom="true"
                android:orientation="vertical"
                android:layout_marginTop="73dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center">
                    <Button
                        android:layout_marginTop="7dp"
                        android:layout_width="70dp"
                        android:layout_height="35dp"
                        android:drawableTop="@drawable/ic_placeholder"
                        android:text="Location"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="14px"
                        android:textAllCaps="false"
                        android:background="?android:attr/selectableItemBackground"/>
                    <Button
                        android:layout_marginTop="7dp"
                        android:layout_width="70dp"
                        android:layout_height="35dp"
                        android:drawableTop="@drawable/ic_price_tag"
                        android:text="Price"
                        android:textColor="@android:color/darker_gray"
                        android:textAllCaps="false"
                        android:textSize="14px"
                        android:background="?android:attr/selectableItemBackground"/>
                    <Button
                        android:layout_marginTop="7dp"
                        android:layout_width="70dp"
                        android:layout_height="35dp"
                        android:drawableTop="@drawable/ic_user"
                        android:text="Account"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="14px"
                        android:textAllCaps="false"
                        android:background="?android:attr/selectableItemBackground"/>
                    <Button
                        android:layout_marginTop="7dp"
                        android:layout_width="70dp"
                        android:layout_height="35dp"
                        android:drawableTop="@drawable/ic_flash"
                        android:text="Quick search"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="14px"
                        android:textAllCaps="false"
                        android:background="?android:attr/selectableItemBackground"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>