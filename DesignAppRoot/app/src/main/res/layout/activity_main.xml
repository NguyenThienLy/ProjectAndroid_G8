<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff">
        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="450dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_gravity="top"
                        android:scaleType="fitXY"
                        android:src="@drawable/banner1"
                        android:layout_alignParentLeft="true" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="30dp"
                        android:paddingRight="30dp">
                        <LinearLayout
                            android:id="@+id/box_search"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:orientation="horizontal"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="100dp"
                            android:background="@drawable/frame">
                            <Button
                                android:id="@+id/btn_choose_search"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/frame"
                                android:drawableLeft="@drawable/ic_svg_location_search_24px"
                                android:paddingLeft="12dp"
                                android:layout_marginTop="1dp"/>

                            <EditText
                                android:id="@+id/edT_search"
                                android:layout_width="200dp"
                                android:layout_height="40dp"
                                android:background="@drawable/frame"
                                android:focusable="false"
                                android:hint="Tìm quận, tên đường"
                                android:paddingLeft="10px"
                                android:textColor="@android:color/darker_gray"
                                android:textColorHint="#666666"
                                android:textSize="12dp"/>
                        </LinearLayout>
                        <TableLayout
                            android:layout_marginTop="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="200dp">
                            <TableRow
                                android:layout_marginTop="10dp"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal">
                                <LinearLayout android:layout_width="100dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_height="90dp"
                                    android:orientation="vertical"
                                    android:background="@drawable/custom_profile">
                                    <ImageView
                                        android:layout_width="25dp"
                                        android:layout_height="25dp"
                                        android:layout_gravity="center_horizontal"
                                        android:src="@drawable/img_icon_1"
                                        android:layout_marginTop="20dp"/>
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Tốc độ"
                                        android:textSize="12dp"
                                        android:textStyle="bold"
                                        android:layout_marginTop="5dp"
                                        android:textAlignment="center"/>
                                </LinearLayout>
                                <LinearLayout android:layout_width="100dp"
                                    android:layout_height="90dp"
                                    android:orientation="vertical"
                                    android:background="@drawable/custom_profile">
                                    <ImageView
                                        android:layout_width="25dp"
                                        android:layout_height="25dp"
                                        android:layout_gravity="center_horizontal"
                                        android:src="@drawable/img_icon_2"
                                        android:layout_marginTop="20dp"/>
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Ứng dụng"
                                        android:textSize="12dp"
                                        android:textStyle="bold"
                                        android:layout_marginTop="5dp"
                                        android:textAlignment="center"/>
                                </LinearLayout>
                                <LinearLayout android:layout_width="100dp"
                                    android:layout_marginLeft="10dp"
                                    android:layout_height="90dp"
                                    android:orientation="vertical"
                                    android:background="@drawable/custom_profile">
                                    <ImageView
                                        android:layout_width="25dp"
                                        android:layout_height="25dp"
                                        android:layout_gravity="center_horizontal"
                                        android:src="@drawable/img_icon_5"
                                        android:layout_marginTop="20dp"/>
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Tin cậy"
                                        android:textSize="12dp"
                                        android:textStyle="bold"
                                        android:layout_marginTop="5dp"
                                        android:textAlignment="center"/>
                                </LinearLayout>
                            </TableRow>
                            <TableRow
                                android:layout_marginTop="10dp"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal">
                                <LinearLayout android:layout_width="100dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_height="90dp"
                                    android:orientation="vertical"
                                    android:background="@drawable/custom_profile">
                                    <ImageView
                                        android:layout_width="25dp"
                                        android:layout_height="25dp"
                                        android:layout_gravity="center_horizontal"
                                        android:src="@drawable/img_icon_3"
                                        android:layout_marginTop="20dp"/>
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Giải pháp"
                                        android:textSize="12dp"
                                        android:textStyle="bold"
                                        android:layout_marginTop="5dp"
                                        android:textAlignment="center"/>
                                </LinearLayout>
                                <LinearLayout android:layout_width="100dp"
                                    android:layout_height="90dp"
                                    android:orientation="vertical"
                                    android:background="@drawable/custom_profile">
                                    <ImageView
                                        android:layout_width="25dp"
                                        android:layout_height="25dp"
                                        android:layout_gravity="center_horizontal"
                                        android:src="@drawable/img_icon_4"
                                        android:layout_marginTop="20dp"/>
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Bảo mật"
                                        android:textSize="12dp"
                                        android:textStyle="bold"
                                        android:layout_marginTop="5dp"
                                        android:textAlignment="center"/>
                                </LinearLayout>
                                <LinearLayout android:layout_width="100dp"
                                    android:layout_marginLeft="10dp"
                                    android:layout_height="90dp"
                                    android:orientation="vertical"
                                    android:background="@drawable/custom_profile">
                                    <ImageView
                                        android:layout_width="25dp"
                                        android:layout_height="25dp"
                                        android:layout_gravity="center_horizontal"
                                        android:src="@drawable/img_icon_6"
                                        android:layout_marginTop="20dp"/>
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Cập nhật"
                                        android:textSize="12dp"
                                        android:textStyle="bold"
                                        android:layout_marginTop="5dp"
                                        android:textAlignment="center"/>
                                </LinearLayout>
                            </TableRow>
                        </TableLayout>
                    </LinearLayout>

                </RelativeLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/img_icon_5"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Xu hướng tìm kiếm"
                        android:layout_marginLeft="5dp"
                        android:textSize="14dp"
                        android:textColor="#666666" />
                </LinearLayout>
                <GridView
                    android:id="@+id/grV_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:numColumns="3"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp">
                </GridView>
                <!--List hiển thị danh sách phòng trọ-->
                <!--<ListView-->
                <!--android:background="#ffffff"-->
                <!--android:paddingLeft="10dp"-->
                <!--android:paddingRight="10dp"-->
                <!--android:id="@+id/lstV_room"-->
                <!--android:layout_marginTop="20dp"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="750dp"-->
                <!--android:layout_alignParentBottom="true"-->
                <!--android:gravity="center">-->
                <!--</ListView>-->
                <!--End List hiển thị danh sách phòng trọ-->

                <!-- Recyclerview để text -->

                <!--Processbar-->
                <ProgressBar
                    android:id="@+id/Progress_Main"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <!--End Processbar-->

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/img_icon_4"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Phòng đã xác thực"
                        android:layout_marginLeft="5dp"
                        android:textSize="14dp"
                        android:textColor="#666666" />
                </LinearLayout>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_Main_Room"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_alignParentBottom="true"
                    android:gravity="center"
                    >

                </android.support.v7.widget.RecyclerView>

                <!-- End recyclerview để text-->


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/img_icon_6"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Phòng mới đăng"
                        android:layout_marginLeft="5dp"
                        android:textSize="14dp"
                        android:layout_marginTop="2dp"
                        android:textColor="#666666" />
                </LinearLayout>

                <!--Hiển thị danh sách trọ random-->
                <android.support.v7.widget.RecyclerView
                    android:verticalSpacing="20dp"
                    android:stretchMode="spacingWidth"
                    android:layout_marginBottom="100dp"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:id="@+id/recycler_Grid_Main_Room"
                    android:numColumns="2"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </android.support.v7.widget.RecyclerView>
                <!--End Hiển thị danh sách trọ random-->

                <!--<GridView-->
                <!--android:paddingLeft="10dp"-->
                <!--android:paddingRight="10dp"-->
                <!--android:id="@+id/grV_room"-->
                <!--android:layout_marginTop="20dp"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="700dp"-->
                <!--android:numColumns="auto_fit"-->
                <!--android:columnWidth="175dp"-->
                <!--android:verticalSpacing="20dp"-->
                <!--android:stretchMode="spacingWidth"-->
                <!--android:gravity="center"-->
                <!--&gt;-->
                <!--</GridView>-->
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
        <LinearLayout
            android:id="@+id/lLay_menu"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@android:color/white"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">
                <Button
                    android:id="@+id/btn_Map_View"
                    android:layout_marginTop="7dp"
                    android:layout_width="70dp"
                    android:layout_height="35dp"
                    android:drawableTop="@drawable/ic_svg_placeholder_24px"
                    android:text="Location"
                    android:textColor="#666666"
                    android:textSize="12dp"
                    android:textAllCaps="false"
                    android:background="?android:attr/selectableItemBackground"/>
                <Button
                    android:id="@+id/btn_find_room"
                    android:layout_marginTop="7dp"
                    android:layout_width="70dp"
                    android:layout_height="35dp"
                    android:drawableTop="@drawable/ic_svg_group_user_24_2"
                    android:text="Ở ghép"
                    android:textColor="@android:color/darker_gray"
                    android:textAllCaps="false"
                    android:textSize="12dp"
                    android:background="?android:attr/selectableItemBackground"/>

                <Button
                    android:id="@+id/btn_favorite_rooms"
                    android:layout_width="70dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="7dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:drawableTop="@drawable/ic_favorite"
                    android:text="Favorites"
                    android:textAllCaps="false"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="14px" />

                <Button
                    android:id="@+id/btn_Account_View"
                    android:layout_marginTop="7dp"
                    android:layout_width="70dp"
                    android:layout_height="35dp"
                    android:drawableTop="@drawable/ic_svg_user_24px"
                    android:text="Account"
                    android:textColor="#666666"
                    android:textSize="12dp"
                    android:textAllCaps="false"
                    android:background="?android:attr/selectableItemBackground"/>
                <Button
                    android:layout_marginTop="7dp"
                    android:layout_width="70dp"
                    android:layout_height="35dp"
                    android:drawableTop="@drawable/ic_svg_flash_24"
                    android:text="Quick search"
                    android:textColor="#666666"
                    android:textSize="12dp"
                    android:textAllCaps="false"
                    android:background="?android:attr/selectableItemBackground"/>
                <Button
                    android:id="@+id/btn_postRoom_main_room"
                    android:layout_marginTop="7dp"
                    android:layout_width="70dp"
                    android:layout_height="35dp"
                    android:drawableTop="@drawable/ic_svg_flash_24"
                    android:text="Post room"
                    android:textColor="#666666"
                    android:textSize="12dp"
                    android:textAllCaps="false"
                    android:background="?android:attr/selectableItemBackground"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>
