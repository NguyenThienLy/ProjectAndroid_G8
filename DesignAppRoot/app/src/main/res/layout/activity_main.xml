<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff">
        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="350dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_gravity="top"
                        android:scaleType="fitXY"
                        android:src="@drawable/bg_jpg_banner_1"
                        android:layout_alignParentLeft="true" />
                    <LinearLayout
                        android:id="@+id/box_search"
                        android:layout_width="220dp"
                        android:layout_height="35dp"
                        android:orientation="horizontal"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="100dp"
                        android:background="@drawable/frame">
                        <Button
                            android:id="@+id/btn_choose_search"
                            android:layout_width="40dp"
                            android:layout_height="35dp"
                            android:background="@drawable/frame"
                            android:drawableLeft="@drawable/ic_svg_location_search_24px"
                            android:paddingLeft="12dp"
                            android:layout_marginTop="1dp"/>
                        <EditText
                            android:id="@+id/edT_search"
                            android:layout_width="160dp"
                            android:layout_height="35dp"
                            android:background="@drawable/frame"
                            android:textSize="12dp"
                            android:textColor="@android:color/darker_gray"
                            android:hint="Where do you need?"
                            android:paddingLeft="10px" />
                    </LinearLayout>

                    <ListView
                        android:id="@+id/lstV_search"
                        android:layout_width="220dp"
                        android:layout_height="175dp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/frame"
                        android:layout_below="@id/box_search"
                        android:layout_marginTop="5dp"
                        android:visibility="invisible"></ListView>

                    <ListView
                        android:id="@+id/lstV_suggest"
                        android:layout_width="220dp"
                        android:layout_height="175dp"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/box_search"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/frame"
                        android:visibility="invisible"></ListView>
                </RelativeLayout>
                <Button
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/custom_button"
                    android:text="Top Location"
                    android:textAllCaps="false"
                    android:textColor="#ffffff"
                    android:textSize="10dp"
                    android:drawableLeft="@drawable/ic_svg_location_24px"
                    android:paddingLeft="10dp"
                    android:paddingRight="5dp"/>
                <GridView
                    android:id="@+id/grV_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:numColumns="3">

                </GridView>

                <Button
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/custom_button"
                    android:text="Top Room"
                    android:textAllCaps="false"
                    android:textColor="#ffffff"
                    android:textSize="10dp"
                    android:drawableLeft="@drawable/ic_svg_bed_24px"
                    android:paddingLeft="15dp"
                    android:paddingRight="10dp"/>

                <!--List hiển thị danh sách phòng trọ-->
                <!--<ListView-->
                <!--android:background="#ffffff"-->
                <!--android:paddingLeft="10dp"-->
                <!--android:paddingRight="10dp"-->
                <!--android:id="@+id/lstV_room"-->
                <!--android:layout_marginTop="20dp"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="750dp"-->
                <!--android:layout_alignParentBottom="true"-->
                <!--android:gravity="center">-->
                <!--</ListView>-->
                <!--End List hiển thị danh sách phòng trọ-->

                <!-- Recyclerview để text -->

                <!--Processbar-->
                <ProgressBar
                    android:id="@+id/Progress_Main"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <!--End Processbar-->


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_Main_Room"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_alignParentBottom="true"
                    android:gravity="center"
                    >

                </android.support.v7.widget.RecyclerView>

                <!-- End recyclerview để text-->


                <Button
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/custom_button"
                    android:text="New Room"
                    android:textAllCaps="false"
                    android:textColor="#ffffff"
                    android:textSize="10dp"
                    android:drawableLeft="@drawable/ic_svg_badge_24px"
                    android:paddingLeft="15dp"
                    android:paddingRight="10dp"/>

                <!--Hiển thị danh sách trọ random-->
                <android.support.v7.widget.RecyclerView
                    android:columnWidth="175dp"
                    android:verticalSpacing="20dp"
                    android:stretchMode="spacingWidth"
                    android:layout_marginBottom="100dp"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:id="@+id/recycler_Grid_Main_Room"
                    android:numColumns="auto_fit"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </android.support.v7.widget.RecyclerView>
                <!--End Hiển thị danh sách trọ random-->

                <!--<GridView-->
                <!--android:paddingLeft="10dp"-->
                <!--android:paddingRight="10dp"-->
                <!--android:id="@+id/grV_room"-->
                <!--android:layout_marginTop="20dp"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="700dp"-->
                <!--android:numColumns="auto_fit"-->
                <!--android:columnWidth="175dp"-->
                <!--android:verticalSpacing="20dp"-->
                <!--android:stretchMode="spacingWidth"-->
                <!--android:gravity="center"-->
                <!--&gt;-->
                <!--</GridView>-->
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
        <LinearLayout
            android:id="@+id/lLay_menu"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@android:color/white"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">
                <Button
                    android:layout_marginTop="7dp"
                    android:layout_width="70dp"
                    android:layout_height="35dp"
                    android:drawableTop="@drawable/ic_svg_placeholder_24px"
                    android:text="Location"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="14px"
                    android:textAllCaps="false"
                    android:background="?android:attr/selectableItemBackground"/>
                <Button
                    android:layout_marginTop="7dp"
                    android:layout_width="70dp"
                    android:layout_height="35dp"
                    android:drawableTop="@drawable/ic_svg_price_tag_24"
                    android:text="Price"
                    android:textColor="@android:color/darker_gray"
                    android:textAllCaps="false"
                    android:textSize="14px"
                    android:background="?android:attr/selectableItemBackground"/>
                <Button
                    android:layout_marginTop="7dp"
                    android:layout_width="70dp"
                    android:layout_height="35dp"
                    android:drawableTop="@drawable/ic_svg_user_24px"
                    android:text="Account"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="14px"
                    android:textAllCaps="false"
                    android:background="?android:attr/selectableItemBackground"/>
                <Button
                    android:layout_marginTop="7dp"
                    android:layout_width="70dp"
                    android:layout_height="35dp"
                    android:drawableTop="@drawable/ic_svg_flash_24"
                    android:text="Quick search"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="14px"
                    android:textAllCaps="false"
                    android:background="?android:attr/selectableItemBackground"/>
                <Button
                    android:id="@+id/btn_postRoom_main_room"
                    android:layout_marginTop="7dp"
                    android:layout_width="70dp"
                    android:layout_height="35dp"
                    android:drawableTop="@drawable/ic_svg_flash_24"
                    android:text="Post room"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="14px"
                    android:textAllCaps="false"
                    android:background="?android:attr/selectableItemBackground"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>
