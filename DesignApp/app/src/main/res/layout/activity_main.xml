<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="650px">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="650px"
                    android:layout_gravity="top"
                    android:src="@drawable/banner"
                    android:scaleType="fitXY"/>
                <EditText
                    android:layout_width="500px"
                    android:layout_height="60px"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/frame"
                    android:textSize="20px"
                    android:textColor="@android:color/darker_gray"
                    android:paddingLeft="10px"
                    android:hint="Where do you need?"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal">
                <ImageButton
                    android:layout_width="225px"
                    android:layout_height="200px"
                    android:src="@drawable/binh_thanh"
                    android:background="@drawable/frame"/>
                <ImageButton
                    android:layout_width="225px"
                    android:layout_height="200px"
                    android:src="@drawable/binh_thanh"
                    android:background="@drawable/frame"
                    android:layout_marginLeft="10dp"/>
                <ImageButton
                    android:layout_width="225px"
                    android:layout_height="200px"
                    android:src="@drawable/binh_thanh"
                    android:background="@drawable/frame"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>
            <GridView
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:id="@+id/gvRoom"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="700dp"
                android:numColumns="auto_fit"
                android:columnWidth="170dp"
                android:verticalSpacing="10dip"
                android:stretchMode="spacingWidth"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                >
            </GridView>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/boxMenu"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@android:color/white"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <Button
                android:layout_marginTop="7dp"
                android:layout_width="70dp"
                android:layout_height="35dp"
                android:drawableTop="@drawable/ic_placeholder"
                android:text="Location"
                android:textColor="@android:color/darker_gray"
                android:textSize="14px"
                android:textAllCaps="false"
                android:background="?android:attr/selectableItemBackground"/>
            <Button
                android:layout_marginTop="7dp"
                android:layout_width="70dp"
                android:layout_height="35dp"
                android:drawableTop="@drawable/ic_price_tag"
                android:text="Price"
                android:textColor="@android:color/darker_gray"
                android:textAllCaps="false"
                android:textSize="14px"
                android:background="?android:attr/selectableItemBackground"/>
            <Button
                android:layout_marginTop="7dp"
                android:layout_width="70dp"
                android:layout_height="35dp"
                android:drawableTop="@drawable/ic_user"
                android:text="Account"
                android:textColor="@android:color/darker_gray"
                android:textSize="14px"
                android:textAllCaps="false"
                android:background="?android:attr/selectableItemBackground"/>
            <Button
                android:layout_marginTop="7dp"
                android:layout_width="70dp"
                android:layout_height="35dp"
                android:drawableTop="@drawable/ic_flash"
                android:text="Quick search"
                android:textColor="@android:color/darker_gray"
                android:textSize="14px"
                android:textAllCaps="false"
                android:background="?android:attr/selectableItemBackground"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>